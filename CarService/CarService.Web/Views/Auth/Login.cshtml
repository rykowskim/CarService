@model CarService.Web.ViewModels.User.LoginViewModel
<style>
    .login {
        margin-top: 75px;
    }
</style>
<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 login">
        <h3 class="text-center">Zaloguj się do systemu</h3>
        <hr />
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <div class="form-group row col-md-offset-1">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2 required"})
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row col-md-offset-1">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                    </div>
                </div>
                
                <div class="form-group row text-center">
                    <button id="btnSubmit" type="submit" class="btn btn-primary btn-lg">Zaloguj</button>
                </div>
            }
    </div>
</div>
