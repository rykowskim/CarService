@model CarService.Web.ViewModels.User.RegisterCreateViewModel 
<style>

    .panel-primary{
        margin-top: 75px;
    }
</style>
<div class="container">
    <div class="panel panel-primary col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel-body col-md-offset-1">
            @using (Html.BeginForm("Register", "User", FormMethod.Post))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <div class="form-group row col-md-offset-4">
                    <h3>Stwórz konto</h3>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.RepeatPassword, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.RepeatPassword, new { @class = "form-control", type = "password" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Surname, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Pesel, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Pesel, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "control-label col-md-2 required"})
                    <div class="col-md-10">
                       @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", type = "date", @min = DateTime.Now})
                    </div>
                </div>
                <div class="form-group row col-md-offset-4">
                    <button id="btnSubmit" type="submit" class="btn btn-primary btn-lg">Rejestracja</button>
                </div>
            }
            <hr>
            <p>Posiadasz już konto? <a href="@Url.Action("Index", "login")">Zaloguj się</a></p>
        </div>
    </div>
</div>
