                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>*@
                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("Register", "User")"><i class="fa fa-user-circle fa-fw"></i> Rejestracja</a></li>
                        <li><a href="@Url.Action("Login", "Auth")"><i class="fa fa-sign-in fa-fw"></i> Zaloguj się</a></li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("Signout", "Auth")"><i class="fa fa-sign-out fa-fw"></i>Wyloguj się</a></li>
