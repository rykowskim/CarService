@model CarService.Web.ViewModels.Shared.Address.AddressEdit
<div class="form-group row">
    @Html.LabelFor(m => m.Street, new { @class = "control-label col-md-1", @style = "line-height: 35px; padding: 0" })
    <div class="col-md-4">
        @Html.TextBoxFor(m => m.Street, new { @class = "form-control", @style = "border-radius:0px" })
    </div>
    @Html.LabelFor(m => m.FlatNumber, new { @class = "control-label col-md-2 col-md-offset-1" })
    <div class="col-md-2">
        @Html.TextBoxFor(m => m.FlatNumber, new { @class = "form-control", @style = "border-radius:0px" })
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(m => m.PostalCode, new { @class = "control-label col-md-2", @style = "line-height: 35px; padding: 0" })
    <div class="col-md-2">
        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @style = "border-radius:0px" })
    </div>
    @Html.LabelFor(m => m.City, new { @class = "control-label col-md-1 col-md-offset-1", @style = "line-height: 35px; padding: 0" })
    <div class="col-md-4">
        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @style = "border-radius:0px" })
    </div>
</div>